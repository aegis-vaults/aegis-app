# ============================================
# Aegis Frontend - Production Environment Template
# ============================================
# Copy this to .env.production and fill in the values
# For Vercel deployment, add these as environment variables
# in the Vercel dashboard

# ============================================
# Guardian API Configuration
# ============================================
# Your Guardian backend URL (Railway)
NEXT_PUBLIC_GUARDIAN_API_URL=https://aegis-guardian-production.up.railway.app

# ============================================
# Solana Configuration
# ============================================
# Network: devnet or mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Aegis Protocol Program ID (deployed on-chain)
NEXT_PUBLIC_PROGRAM_ID=ET9WDoFE2bf4bSmciLL7q7sKdeSYeNkWbNMHbAMBu2ZJ

# Solana RPC URL (use a dedicated provider for production)
# Recommended: Helius, QuickNode, or Triton
NEXT_PUBLIC_SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY

# WebSocket URL for real-time updates (optional)
NEXT_PUBLIC_SOLANA_WS_URL=wss://devnet.helius-rpc.com/?api-key=YOUR_API_KEY

# ============================================
# Application Configuration
# ============================================
# Your production domain
NEXT_PUBLIC_APP_URL=https://aegis-vaults.xyz

# Application name
NEXT_PUBLIC_APP_NAME=Aegis Vaults

# Enable analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# ============================================
# Feature Flags (optional)
# ============================================
# Enable WebSocket real-time updates
NEXT_PUBLIC_ENABLE_WEBSOCKET=false

# Enable notifications
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Enable Blinks
NEXT_PUBLIC_ENABLE_BLINKS=true

# ============================================
# Monitoring & Analytics (optional)
# ============================================
# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# ============================================
# Notes
# ============================================
# - All variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Keep sensitive keys in server-side variables only
# - Update NEXT_PUBLIC_PROGRAM_ID if you redeploy the protocol
# - Update NEXT_PUBLIC_GUARDIAN_API_URL if Guardian moves
# - For local development, create .env.local with same structure
